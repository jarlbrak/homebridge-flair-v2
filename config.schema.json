{
  "pluginAlias": "Flair",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "ℹ️ **Authentication**: Flair supports OAuth 2.0 Client Credentials and Password Grant flows. Contact Flair support at partners@flair.co to obtain your Client ID and Client Secret for your registered email address.",
  "schema": {
    "type": "object",
    "properties": {
      "authType": {
        "title": "Authentication Type",
        "type": "string",
        "description": "Choose the authentication method. Password Grant is recommended for better token management.",
        "default": "legacy",
        "required": false,
        "oneOf": [
          {
            "title": "Legacy (flair-api-ts) - Default",
            "enum": ["legacy"]
          },
          {
            "title": "OAuth 2.0 Password Grant (Recommended)",
            "enum": ["password"]
          },
          {
            "title": "OAuth 2.0 Client Credentials",
            "enum": ["client_credentials"]
          }
        ]
      },
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "description": "Client ID obtained from Flair Support (required for all auth types)",
        "required": true,
        "default": ""
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "description": "Client Secret obtained from Flair Support (required for all auth types)",
        "required": true,
        "default": ""
      },
      "username": {
        "title": "Username",
        "type": "string",
        "description": "Username for Flair account (required for legacy authentication)",
        "required": false,
        "condition": {
          "functionBody": "return model.authType === 'legacy' || model.authType === 'password' || !model.authType;"
        },
        "default": ""
      },
      "password": {
        "title": "Password",
        "type": "string",
        "description": "Password for Flair account (required for legacy authentication)",
        "required": false,
        "condition": {
          "functionBody": "return model.authType === 'legacy' || model.authType === 'password' || !model.authType;"
        },
        "default": ""
      },
      "pollInterval": {
        "title": "Poll Interval",
        "type": "number",
        "description": "How often the plugin should poll the Flair API for updates (in seconds).",
        "required": true,
        "default": 60,
        "minimum": 30,
        "maximum": 600
      },
      "hidePuckSensors": {
        "title": "Hide puck sensors",
        "description": "Hides the Puck Sensors",
        "type": "boolean",
        "required": false,
        "default": true
      },
      "hidePuckRooms": {
        "title": "Hide room thermostats",
        "description": "Hides the Puck Rooms (thermostats)",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "hidePrimaryStructure": {
        "title": "Hide primary structure",
        "description": "Hides the primary structure thermostat",
        "type": "boolean",
        "required": false,
        "default": true
      },
      "hideVentTemperatureSensors": {
        "title": "Hide vent temperature sensors",
        "description": "Hides the Vent Temperature Sensors",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "ventAccessoryType": {
        "title": "Vent Accessory Type",
        "description": "Controls how the vents should show up in HomeKit",
        "type": "string",
        "required": true,
        "default": "windowCovering",
        "oneOf": [
          {
            "title": "Window Covering",
            "enum": [
              "windowCovering"
            ]
          },
          {
            "title": "Fan",
            "enum": [
              "fan"
            ]
          },
          {
            "title": "Air Purifier",
            "enum": [
              "airPurifier"
            ]
          },
          {
            "title": "Hidden (if you just want to use Flair Auto with Rooms)",
            "enum": [
              "hidden"
            ]
          }
        ]
      }
    }
  },
  "form": null,
  "display": null,
  "layout": [
    {
      "type": "section",
      "title": "Authentication",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<div class='alert alert-info'><b>OAuth 2.0 Support:</b> Flair supports OAuth 2.0 Password Grant and Client Credentials flows. The Password Grant method is recommended as it provides better token management with refresh tokens. Contact partners@flair.co to obtain your Client ID and Secret.</div>"
        },
        "authType",
        "clientId",
        "clientSecret",
        "username",
        "password"
      ]
    },
    {
      "type": "section",
      "title": "Plugin Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "pollInterval",
        "ventAccessoryType"
      ]
    },
    {
      "type": "section",
      "title": "Device Visibility",
      "expandable": true,
      "expanded": false,
      "items": [
        "hidePuckSensors",
        "hidePuckRooms",
        "hidePrimaryStructure",
        "hideVentTemperatureSensors"
      ]
    }
  ]
}